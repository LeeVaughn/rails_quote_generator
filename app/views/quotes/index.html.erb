<body>
  <header>
    <h1>Random Quotes</h1>
    <button id="load-quote" class="load-quote">Show another quote</button>
  </header>

  <div class="container">
    <div id="quote-box" class="quote-box">
      <p class="quote"><%= @quote.quote %></p>
      <p class="source"><%= @quote.source %><span class="category"><%= @quote.category %></span></p>
    </div>
  </div>
</body>
